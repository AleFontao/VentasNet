@using VentasNet.Infra.DTO.Request;
@model IEnumerable<ProductoRequest>

@{
    ViewBag.Title = "Lista de Productos";
    List<Producto> carrito = ViewBag.Carrito ?? new List<Producto>();
}

<div class="container mt-5">
    <h2>Lista de Productos</h2>
    <input type="text" id="filtroNombre" placeholder="Filtrar por nombre">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Codigo</th>
                <th>Modificar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductoRequest producto in ViewBag.Producto)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.NombreProducto</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.ImporteProducto</td>
                    <td>@producto.Codigo</td>
                    <td><button class="agregar-btn">Agregar</button></td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Carrito de Compras</h2>
    <table id="carrito" class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Importe</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in carrito)
            {
                <tr>
                    <td>@item.NombreProducto</td>
                    <td>@item.ImporteProducto</td>
                </tr>
            }
        </tbody>
    </table>
</div>




<script>
    $(document).ready(function () {

        $(".agregar-btn").on("click", function () {
            var fila = $(this).closest("tr");
            var nombre = fila.find("td:eq(1)").text();
            var importe = fila.find("td:eq(3)").text();
            $("#carrito tbody").append("<tr><td>" + nombre + "</td><td>" + importe + "</td></tr>");
        });
    });
</script>
