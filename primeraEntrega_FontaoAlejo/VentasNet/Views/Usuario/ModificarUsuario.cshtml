@using VentasNet.Infra.DTO.Request;
@model UsuarioRequest

<form asp-action="ModificarUsuario" method="post">
    <input type="hidden" name="IdUsuario" value="@Model.IdUsuario" />
	<div class="form-group">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control" value="@Model.Email" />
	</div>
	<div class="form-group">
        <label for="contraseniaAntigua">Contraseña Antigua</label>
        <input type="password" id="contraseniaAntigua" name="contraseniaAntigua" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
	<div class="text-danger">
        @TempData["Error"]
    </div>
    
	<button type="submit" class="btn btn-primary">Modificar</button>
</form>

